<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd"
                          start-state="checkout">
                     
<var name="billingAddress" class="com.ecommerce.quickart.model.BillingAddress"/>
<var name="shippingAddress" class="com.ecommerce.quickart.model.ShippingAddress"/>
<var name="order" class="com.ecommerce.quickart.model.Order"/>
<var name="cart" class="com.ecommerce.quickart.model.Cart"/>

<on-start>
	<evaluate expression="orderWebflow.initFlow()" result="flowScope.order"/>
</on-start>

<view-state id="checkout" view="/user/billingAddress"  model="billingAddress">
	<secured attributes="ROLE_USER"/>
	<transition on="submitBillingAddress" to="billingAdd"></transition>
</view-state>

<action-state id="billingAdd">
	<evaluate expression="orderWebflow.addBillingAddress(flowScope.order,billingAddress)" ></evaluate>
	<transition on="positive" to="shippingAddView"/>  
</action-state>

<view-state id="shippingAddView" view="user/shippingAddress"  model="shippingAddress">
	<transition on="submitShippingAddress" to="shippingAddMethod"></transition>
</view-state>

<action-state id="shippingAddMethod">
	<evaluate expression="orderWebflow.addShippingAddress(flowScope.order,shippingAddress)"></evaluate>
	<transition on="positive" to="payMethodView"/>   
</action-state>


<view-state id="payMethodView" view="user/paymentMethod"  model="order">
	<transition on="submitpayMentMethod" to="addPayType"></transition>
</view-state>

<action-state id="addPayType">
	<evaluate expression="orderWebflow.addPayMethod(flowScope.order,order.setPayMethod)"></evaluate>
	<transition on="positive" to="orderSummaryView"/>   
</action-state>

<view-state id="orderSummaryView" view="user/orderSummary"  >
	<transition on="submitconfirm" to="orderSummarAction"></transition>
</view-state>

<action-state id="orderSummarAction">
	<evaluate expression="orderWebflow.confirmOrder(flowScope.order)"></evaluate>
	<transition on="positive" to="orderConrmfirm"/>   
</action-state>

<end-state id="toCart" view ="user/orderSummary"></end-state>
<end-state id="orderConfirm" view ="user/orderConfirmed"></end-state>
<end-state id="toIndex" view ="externalRedirect:contextRelative:/index"></end-state>

<global-transitions>
	<transition on="cancel" to="toCart"/>
</global-transitions>

</flow>